<div class="small mb-2">
  <%= link_to "Back to todolist", @todo.todolist %>
</div>

<h1 class="mb-4">
  <%= @todo.text %>
</h1>

<% @todo.comments.each do |comment| %>
  <div class="mb-3">
    <small>
      <%= time_tag comment.updated_at %>
    </small>
    <%= comment.content %>
  </div>
<% end %>

<%= render 'comments/form', comment: @todo.comments.build %>
